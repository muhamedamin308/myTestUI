<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ground</item>
        <item name="colorPrimaryVariant">@color/ground</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/ground</item>
        <item name="android:windowAnimationStyle">@style/animations</item>
        <!-- Secondary brand color. -->
        <item name="android:navigationBarColor">@color/ground</item>
        <item name="android:colorAccent">@color/selected</item>
    </style>
    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="animations">
        <item name="android:windowEnterAnimation">@anim/enter_left_to_right</item>
        <item name="android:windowExitAnimation">@anim/exit_right_to_left</item>
    </style>
</resources>